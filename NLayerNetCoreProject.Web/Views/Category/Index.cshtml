@model IEnumerable<CategoryDto>
@{

    ViewData["Title"] = "Index";
}
<h1>Kategoriler</h1>
<a asp-action="Create">Yeni Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                CategoryId
            </th>
            <th>
                CategoryName
            </th>
            <th> İşlemler </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
         {
        <tr>
            <td>
                @item.CategoryId
            </td>
            <td>
                @item.CategoryName
            </td>
            <td>
                <a asp-action="Update" asp-route-id="@item.CategoryId">Güncelle</a>
                <a asp-action="Delete" asp-route-id="@item.CategoryId">Sil</a>
            </td>
        </tr>
         }
    </tbody>
</table>